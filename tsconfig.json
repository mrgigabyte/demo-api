{
    "compilerOptions": {
        "outDir": "build",
        "allowJs": true,
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/**.ts",
        "test/**/**.ts",
        "src/**/**.js"
    ],
    "exclude": [
        "node_modules"
    ]
}